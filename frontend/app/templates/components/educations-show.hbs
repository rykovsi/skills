<div id="educationsHeader" class="card-header bg-info">
  <div class="row">
    <div class="col-sm-6 header-text" id="amount-of-educations">
      Ausbildung ({{amountOfEducations}})
    </div>
  </div>
</div>
<div class="border border-info rounded-bottom">
  <div class="card-body d-flex flex-column">
    <div class="mb-2">
      <a onclick={{action 'toggleEducationNew' true}} role="button" class="{{~if (or educationNew educationEditing) '' 'edit-buttons'~}}">
        <i class="fa {{~if (or educationNew educationEditing) '' ' add'~}}"></i>
        {{~if (or educationNew educationEditing) '' ' Ausbildung hinzuf√ºgen'~}}
      </a>
    </div>
    <div id="competence-content-show">
      {{component (if educationNew 'education-new')
                  personId=person.id
                  done=(action 'toggleEducationNew')}}
      {{#each sortedEducations as |education|}}
        <div class="zeile">
          {{#if (eq educationEditing education)}}
            {{education-edit
            education=educationEditing
            done=(action 'toggleEducationEditing')}}
          {{else}}
            {{education-show selectEducation = (if (or educationEditing educationNew)
             null (action (mut educationEditing)))
             education=education}}
          {{/if}}
        </div>
      {{/each}}
    </div>
  </div>
</div>
